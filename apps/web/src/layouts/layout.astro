---
import { ClientRouter } from "astro:transitions";
import { VisualEditing } from "@tinloof/sanity-astro/visual-editing";
import { SanityLive } from "@tinloof/sanity-astro/live";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { loadQuery } from "@/sanity";
import { SETTINGS_QUERY } from "@/sanity/queries";
import type { SETTINGS_QUERY_RESULT } from "@/sanity/types";
import "../styles/global.css";

const { data: settings } = await loadQuery<SETTINGS_QUERY_RESULT>(Astro, { query: SETTINGS_QUERY });
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro + Sanity</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col font-sans">
    <Header siteName={settings?.siteName} navigation={settings?.navigation} />
    <main class="flex-1 w-full max-w-3xl mx-auto px-6 py-8">
      <slot />
    </main>
    <Footer footerText={settings?.footerText} footerLinks={settings?.footerLinks} />
    <VisualEditing />
    <SanityLive refreshDebounce={1000} />
  </body>
</html>
