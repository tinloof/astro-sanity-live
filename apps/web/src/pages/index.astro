---
// Simulate a data fetch (like calling Sanity)
const data = {
  title: "Hello from Cloudflare Workers",
  timestamp: new Date().toISOString(),
}

// Set cache headers
Astro.response.headers.set('Cache-Control', 'public, max-age=60, s-maxage=3600')
Astro.response.headers.set('Cache-Tag', 'page:home')
---

<html>
  <head>
    <title>{data.title}</title>
  </head>
  <body>
    <h1>{data.title}</h1>
    <p>Generated at: {data.timestamp}</p>
    <p>If caching works, this timestamp should stay the same on refresh.</p>
  </body>
</html>
