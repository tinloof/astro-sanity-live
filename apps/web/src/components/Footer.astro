---
import type { SETTINGS_QUERY_RESULT } from "../../sanity.types";

interface Props {
  footerText: SETTINGS_QUERY_RESULT["footerText"];
  footerLinks: SETTINGS_QUERY_RESULT["footerLinks"];
}

const { footerText = "Built with Astro and Sanity", footerLinks = [] } = Astro.props;
const year = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-400 px-6 py-8 shrink-0">
  <div class="max-w-6xl mx-auto flex justify-between items-center">
    <p class="text-sm">&copy; {year} {footerText}</p>
    <nav class="flex gap-6">
      {footerLinks?.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener"
          class="text-sm text-gray-400 hover:text-white transition-colors"
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</footer>
