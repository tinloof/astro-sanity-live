{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["PUBLIC_SANITY_PROJECT_ID", "PUBLIC_SANITY_DATASET", "SANITY_TOKEN"]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typegen": {
      "cache": true,
      "outputs": ["schema.json", "sanity.types.ts"],
      "env": ["PUBLIC_SANITY_PROJECT_ID", "PUBLIC_SANITY_DATASET"]
    },
    "@apps/web#typegen:watch": {
      "outputs": ["schema.json", "sanity.types.ts"],
      "cache": false,
      "persistent": true
    },
    "@apps/web#build": {
      "dependsOn": ["@apps/web#typegen"],
      "outputs": ["dist/**"],
      "cache": true,
      "env": ["PUBLIC_SANITY_PROJECT_ID", "PUBLIC_SANITY_DATASET", "SANITY_TOKEN"]
    },
    "@apps/web#dev": {
      "with": ["@apps/web#typegen:watch"],
      "persistent": true
    }
  }
}
